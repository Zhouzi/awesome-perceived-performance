    style.
      *,
      *:before,
      *:after {
        box-sizing: inherit;
      }

      html,
      body,
      h1,
      h2,
      h3,
      h4,
      h5,
      p,
      ul {
        margin: 0;
        padding: 0;
      }

      html {
        font-size: 14px;
        box-sizing: border-box;
      }

      body {
        font-family: Montserrat, sans-serif;
        font-size: 1rem;
        line-height: 1.4;
        font-weight: 400;
        color: #859c9b;
        background-color: #e3f0ef;
      }

      .header {
        padding: 3rem 1rem;
        margin-bottom: 1.5rem;
        background-color: #fff;
        border-bottom: 3px solid #23cbbf;
      }

      .header-container {
        max-width: 600px;
        margin: 0 auto;
        text-align: center;
      }

      h1,
      h2,
      h3,
      h4,
      h5 {
        color: #23cbbf;
        line-height: 1.2;
      }

      h1 {
        font-size: 3.4rem;
        line-height: 1;
        margin-bottom: 0.5rem;
      }

      h1 + p {
        font-size: 0.9rem;
        margin-bottom: 1rem;
      }

      .darker {
        display: block;
        color: #1c9f96;
      }

      .list-inline {
        list-style: none;
      }

      .list-inline li {
        display: inline-block;
        vertical-align: middle;
        padding-right: 0.5rem;
      }

      .list-inline li:last-child {
        padding-right: 0;
      }

      a {
        color: #23cbbf;
      }

      a:focus,
      a:hover {
        color: #14746d;
      }

      a [class^="icon-"] {
        display: inline-block;
        vertical-align: middle;
        padding-right: 0.25rem;
      }

      .content {
        max-width: 600px;
        margin: 0 auto;
        padding: 0 1rem;
      }

      .content p {
        margin-bottom: 1rem;
      }

      h2 {
        color: inherit;
        font-size: 2rem;
        margin-bottom: 1rem;
      }

      .content h2 + ul {
        list-style: none;
        background-color: #fff;
        padding: 1.75rem 0;
        margin-bottom: 2rem;
      }

      .content h2 + ul a {
        display: block;
        padding: 0.25rem 2rem;
      }

      .content h2 + ul a:focus,
      .content h2 + ul a:hover {
        background-color: #f5f5f5;
      }

      .content h2 + ul a:visited {
        color: inherit;
      }

      .content h3,
      .content h3 + p,
      .content h3 + p + ul {
        text-align: center;
      }

      .content h3 {
        font-size: 2.4rem;
        font-size: 2rem;
        background-color: #fff;
        padding: 2rem;
      }

      .content h3::before,
      .content h3::after {
        content: '"';
        color: #d9e1e0;
      }

      .content h3 + p,
      .content h3 + p + ul {
        padding: 1rem;
        background-color: #d9e1e0;
      }

      .content h3 + p {
        margin: 0;
        padding-bottom: 0;
      }

      .content h3 + p + ul {
        font-size: 0.8rem;
        list-style: none;
        margin-bottom: 2rem;
      }

      .content h3 + p + ul a {
        color: #1c9f96;
        text-decoration: none;
        text-transform: uppercase;
      }

      .footer {
        padding: 1rem;
      }

      .footer ul {
        text-align: center;
        font-size: 0.9rem;
      }

      @media (min-width: 666px) {
        html {
          font-size: 16px;
        }

        .darker {
          display: inline;
        }
      }

